#!/usr/bin/env bash

set -eo pipefail

# shellcheck disable=SC2128
bp_dir=$(cd "$(dirname "$0")/.."; pwd)
build_dir=$(pwd)
build_plan="$2"

# shellcheck source=/dev/null
source "$bp_dir/lib/detect.sh"

if ! detect_package_json "$build_dir" ; then
  exit 100
else
  write_to_build_plan "$build_plan"
fi
