#!/usr/bin/env bash

npm_version="6.0.0"

if [[ "$1" == "-v" ]]; then
	echo "$npm_version"
elif [[ "$1" == "view" ]]; then
	echo "npm@$npm_version" "'$npm_version'"

	if [[ "$2" == "npm@6.14.x" ]]; then
		echo "npm@6.14.0" "'6.14.0'"
	fi
elif [[ "$1" == "install" ]]; then
	if [[ "$2" != "-g" ]]; then
		mkdir -p node_modules

		if [[ "$2" != "--no-package-lock" ]]; then
			touch package-lock.json
		fi
	else
		if [[ "$4" == "--prefix" ]]; then
			if [[ ! -d "$(npm root -g --prefix "$5")" ]]; then
				echo "npm prefix directory doesn't exist!"
				exit 1
			fi
		fi
	fi
elif [[ "$1" == "ci" ]]; then
	mkdir -p node_modules
elif [[ "$1" == "run" ]]; then
	if [[ "$2" == "heroku-postbuild" ]]; then
		mkdir -p heroku-postbuild
	elif [[ "$2" == "build" ]]; then
		mkdir -p build
	fi
elif [[ "$1" == "root" ]]; then
	if [[ "$2" == "-g" ]]; then
		if [[ "$3" == "--prefix" ]]; then
			echo "$4""/lib/node_modules"
		fi
	fi
fi
